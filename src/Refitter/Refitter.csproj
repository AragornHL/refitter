<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Authors>Christian Resma Helle</Authors>
    <Product>Refit API Client Code Generator</Product>
    <PackageId>Refitter</PackageId>
    <AssemblyName>refitter</AssemblyName>
    <Company>Christian Resma Helle</Company>
    <Description>Refitter is a CLI tool for generating a C# REST API Client using the Refit library.</Description>
    <PackageLicenseExpression>GPL-3.0-only</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/christianhelle/refitter</PackageProjectUrl>
    <RepositoryUrl>https://github.com/christianhelle/refitter</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <DebugType>embedded</DebugType>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IsPackable>true</IsPackable>
    <PackAsTool>true</PackAsTool>
    <TieredCompilation>true</TieredCompilation>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RootNamespace>Refitter</RootNamespace>
    <Nullable>enable</Nullable>
    <Title>Refitter</Title>
    <IncludeSymbols>true</IncludeSymbols>
    <PackageTags>refit; rest; openapi</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Refitter.Core\Refitter.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Exceptionless" Version="6.0.2" />
    <PackageReference Include="Spectre.Console.Cli" Version="0.47.0" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All"/>
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <PropertyGroup Condition="'$(GITHUB_ACTIONS)' == 'true'">
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
  </PropertyGroup> 

</Project>