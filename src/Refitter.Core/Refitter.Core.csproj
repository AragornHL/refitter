<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>      
      <TargetFramework>netstandard2.0</TargetFramework>
      <LangVersion>latest</LangVersion>
      <Nullable>enable</Nullable>
      <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
      <Authors>Christian Resma Helle</Authors>
      <Product>Refitter Core</Product>
      <PackageId>Refitter.Core</PackageId>
      <AssemblyName>Refitter.Core</AssemblyName>
      <Company>Christian Resma Helle</Company>
      <Description>Core library used by the Refitter CLI tool for generating a C# REST API Client using the Refit library.</Description>
      <PackageLicenseExpression>GPL-3.0-only</PackageLicenseExpression>
      <PackageProjectUrl>https://github.com/christianhelle/refitter</PackageProjectUrl>
      <RepositoryUrl>https://github.com/christianhelle/refitter</RepositoryUrl>
      <RepositoryType>git</RepositoryType>
      <PublishRepositoryUrl>true</PublishRepositoryUrl>
      <DebugType>embedded</DebugType>
      <EmbedUntrackedSources>true</EmbedUntrackedSources>
      <IsPackable>true</IsPackable>
      <TieredCompilation>true</TieredCompilation>
      <RootNamespace>Refitter.Core</RootNamespace>
      <Title>Refitter.Core</Title>
      <PackageTags>refit; rest; openapi</PackageTags>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="NSwag.CodeGeneration.CSharp" Version="13.19.0" />
      <PackageReference Include="NSwag.Core.Yaml" Version="13.19.0" />
    </ItemGroup>

</Project>
