<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
      <LangVersion>latest</LangVersion>
      <Nullable>enable</Nullable>
      <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
      <Authors>Christian Resma Helle</Authors>
      <Product>Refitter Source Generator</Product>
      <PackageId>Refitter.SourceGenerator</PackageId>
      <AssemblyName>Refitter.SourceGenerator</AssemblyName>
      <RootNamespace>Refitter.SourceGenerator</RootNamespace>
      <Title>Refitter.SourceGenerator</Title>
      <Company>Christian Resma Helle</Company>
      <Description>A C# Source Generator that uses Refitter for generating a REST API Client using the Refit library</Description>
      <PackageLicenseExpression>GPL-3.0-only</PackageLicenseExpression>
      <PackageProjectUrl>https://github.com/christianhelle/refitter-sourcegenerator</PackageProjectUrl>
      <RepositoryUrl>https://github.com/christianhelle/refitter-sourcegenerator</RepositoryUrl>
      <RepositoryType>git</RepositoryType>
      <PublishRepositoryUrl>true</PublishRepositoryUrl>
      <DebugType>embedded</DebugType>
      <EmbedUntrackedSources>true</EmbedUntrackedSources>
      <IsPackable>true</IsPackable>
      <TieredCompilation>true</TieredCompilation>
      <PackageReadmeFile>README.md</PackageReadmeFile>
      <PackageTags>refit; rest; openapi</PackageTags>
      <DevelopmentDependency>true</DevelopmentDependency>
      <IncludeBuildOutput>false</IncludeBuildOutput>
      <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.5.0" PrivateAssets="all" />
    <PackageReference Include="H.Generators.Extensions" Version="1.15.1" PrivateAssets="all" />
    <PackageReference Include="NSwag.CodeGeneration.CSharp" Version="13.19.0" PrivateAssets="all" />
    <PackageReference Include="NSwag.Core.Yaml" Version="13.19.0" PrivateAssets="all" />
    <PackageReference Include="Refit" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    <None Include="$(AssemblyName).props" Pack="true" PackagePath="build" />
    <Compile Include="../Refitter.Core/*.cs" />
  </ItemGroup>

</Project>
